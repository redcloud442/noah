    "hono": "^4.6.19",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "concurrently": "^9.1.2",
    "tsx": "^4.7.1",
    "turbo": "^2.4.2"
  }
}
